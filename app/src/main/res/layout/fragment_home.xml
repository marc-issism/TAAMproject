<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/adminFragmentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchFragmentButton"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/searchFragmentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adminFragmentButton"
        app:layout_constraintEnd_toStartOf="@+id/addFragmentButton" />

    <Button
        android:id="@+id/addFragmentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchFragmentButton"
        app:layout_constraintEnd_toStartOf="@+id/reportFragmentButton" />

    <Button
        android:id="@+id/reportFragmentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addFragmentButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/loginStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Login Status"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/recyclerViewContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/loginStatusTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>